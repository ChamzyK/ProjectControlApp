@model ProjectControl.Domain.Entities.Employee
@{
    ViewBag.Title = "Employees";
}

<div>
    <div>
        <h3>Employee form</h3>
        <input type="hidden" id="employeeId" />
        <p>
            <label asp-for="LastName">Last name: </label>
            <input type="text" asp-for="LastName" id="lastName" />
        </p>

        <p>
            <label asp-for="FirstName">First name: </label>
            <input type="text" asp-for="FirstName" id="firstName" />
        </p>

        <p>
            <label asp-for="Patronymic">Patronymic: </label>
            <input type="text" asp-for="Patronymic" id="patronymic" />
        </p>

        <p>
            <label asp-for="Email">E-mail: </label>
            <input type="text" asp-for="Email" id="email" />
        </p>

        <p>
            <input type="submit" value="Save" id="saveButton" />
            <input type="reset" value="Reset" id="resetButton" />
        </p>
    </div>
    <hr />

    <table>
        <thead>
            <tr>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Patronymic</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <script src="~/js/employees.js"></script>

</div>